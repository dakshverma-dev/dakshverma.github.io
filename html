  <script>
    // Theme toggle with persistence
    const html = document.documentElement;
    const toggle = document.getElementById('themeToggle');
    const saved = localStorage.getItem('theme');
    if (saved) html.setAttribute('data-theme', saved);
    toggle?.addEventListener('click', () => {
      const now = html.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
      html.setAttribute('data-theme', now);
      localStorage.setItem('theme', now);
    });

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Fetch and render recent repos (graceful fallback if blocked)
    async function loadRepos() {
      const grid = document.getElementById('repoGrid');
      if (!grid) return;
      try {
        const res = await fetch('https://api.github.com/users/dakshverma/repos?sort=updated');
        if (!res.ok) throw new Error('GitHub API error');
        const repos = (await res.json())
          .filter(r => !r.fork)
          .sort((a,b) => new Date(b.pushed_at) - new Date(a.pushed_at))
          .slice(0, 6);
        if (repos.length === 0) {
          grid.innerHTML = '<p class="muted">No public repositories yet. Stay tuned.</p>';
          return;
        }
        grid.innerHTML = '';
        for (const r of repos) {
          const el = document.createElement('article');
          el.className = 'card';
          el.innerHTML = `
            <h3>${r.name}</h3>
            <p class="muted">${r.description ? r.description.replace(/</g,'&lt;') : 'No description provided.'}</p>
            <p class="muted">‚≠ê ${r.stargazers_count} ‚Ä¢ ‚ëÇ ${r.forks_count} ‚Ä¢ Updated ${new Date(r.pushed_at).toLocaleDateString()}</p>
            <p><a href="${r.html_url}" target="_blank" rel="noopener">Open on GitHub ‚Üí</a></p>
          `;
          grid.appendChild(el);
        }
      } catch (e) {
        document.getElementById('repoGrid').innerHTML = '<p class="muted">Couldn\'t load repositories right now.</p>';
      }
    }
    loadRepos();
  </script>
